{{!-- notes-index.handlebars --}}

<div class="container">
    <div class="row">
        <h1>Notes</h1>
        {{#unless notes}}
            <p>No notes yet, add one!</p>
        {{/unless}}

        {{#each notes}}
            <div class="col-xm-3">
                <h2>{{this.title}}</h2>
                <ul>
                    <sub>{{this.date}}</sub>
                    <sub>{{this.time}}</sub>
                </ul>
                <p>{{this.body}}</p>
            </div>
        {{/each}}

        <div class="row">
            <form method="GET" action="/notes/new"><button class="btn btn-primary" type="submit">New Note</button></form>
        </div>
    </div>
    
</div>
